
<div class="container">
	<div class="row">
        <div class="col-sm-6">
            <h2>Projet</h2>
        </div>
    </div>
	<br/>
	<div class="row">
        <div class="col-md-12">
			<form class="form-horizontal" action="/projet/create<% if(projet && projet.id){ %>/<%= projet.id %> <% } %>" method="POST">
				<fieldset>
					<legend>Informations</legend>
					
					<div class="form-group">
					  <label class="col-md-4 control-label">Nom du projet</label>  
					  <div class="col-md-4">
					  <input name="nom" class="form-control input-md" type="text"  <% if(projet && projet.titre){ %> value="<%= projet.titre %>" <% } %> >
					  </div>
					</div>
				</fieldset>

				
				<input class="btn btn-success" type="submit" value="Envoyer" />
                <br/>
				
			</form>
		</div>
	</div>
</div>
